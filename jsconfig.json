{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
        "@app/components/*": ["/src/components/*"],
        "@app/database/*": ["/src/database/*"],
        "@app/db/migrations/*": ["/src/database/migrations/*"],
        "@app/db/seeds/*": ["/src/database/seeds/*"],
        "@app/layouts/*": ["/src/layouts/*"],
        "@app/libs/*": ["/src/library/*"],
        "@app/auth/*": ["/pages/api/auth/*"],
        "@app/assets/*": ["/public/assets/*"],
        "@page/*": ["/pages/*"],
        "@public/*": ["/public/*"],
    }
  },
  "exclude": ["node_modules"]
}